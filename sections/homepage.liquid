<div class="homepage">
  <img src="{{ 'weeklyhow-logo.png' | asset_img_url: 'large' }}" class="logo">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.subheading != blank %}
    <h1>{{ section.settings.subheading }}</h1>
  {% endif %}
  <p>{% render 'homepage-text' %}</p>
</div>

{% schema %}
{
  "name": "Homepage",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Shopify Theme Development course!"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Bum!"
    }
  ],
  "presets": [
    {
      "name": "Homepage",
      "category": "Custom"
    }
  ]
}
{% endschema %}
