<div class="max-w-md mx-auto">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
  </div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext }}</p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{ shop_url }}"
      class="px-4 py-2 inline text-white rounded-md font-medium shadow bg-green-600 hover:bg-green-700 transition-colors"
    >
      {{ section.settings.button_text }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "404 Subtext",
      "default": "The page you are looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "404 Button Text",
      "default": "Go back to home"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "404 Button URL",
      "default": "/"
    }
  ]
}
{% endschema %}
